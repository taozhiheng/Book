<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:background="@color/white"
    android:fitsSystemWindows="true">
    <android.support.v7.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/login"
        android:fitsSystemWindows="true"
        android:background="@color/toolbar" />
    <ui.StickyLayout
        android:id="@+id/detail_sticky"
        android:layout_below="@id/detail_toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/detail_head"
            android:layout_width="match_parent"
            android:layout_height="144dp">
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:background="@color/reading_divider"
                android:layout_height="1dp"/>
            <FrameLayout
                android:id="@+id/detail_icons"
                android:layout_width="78dp"
                android:layout_height="116dp"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="28dp">
                <ImageView
                    android:id="@+id/detail_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/detail_icon_text"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:maxLength="2"
                    android:textColor="@color/create_other_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@id/detail_icons"
                android:focusable="false"
                android:layout_marginLeft="43dp"
                >
                <TextView
                    android:id="@+id/detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/create_book_name"
                    android:layout_marginTop="27dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/detail_chapterNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/create_other_text"
                    android:text="0/0ç« "/>
                <TextView
                    android:id="@+id/detail_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:textColor="@color/create_other_text" />
                <TextView
                    android:id="@+id/detail_press"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:textColor="@color/create_other_text"/>
            </LinearLayout>
        </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </ui.StickyLayout>
</RelativeLayout>