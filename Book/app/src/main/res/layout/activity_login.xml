<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:id="@+id/login_container">
    <android.support.v7.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/login"
        android:background="@color/toolbar"/>
    <EditText
        android:id="@+id/user_name"
        android:layout_width="292dp"
        android:layout_height="51dp"
        android:singleLine="true"
        android:maxLength="20"
        android:hint="邮箱"
        android:gravity="center_vertical"
        android:textSize="22sp"
        android:textColor="@color/bookshelf_title"
        android:textColorHint="@color/login_border_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_toolbar"
        android:layout_marginTop="52dp"
        android:background="@drawable/gray_border_top"
        android:drawableLeft="@mipmap/ic_account"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="292dp"
        android:layout_height="51dp"
        android:layout_below="@id/user_name"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:layout_marginTop="-1dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:maxLength="16"
        android:textSize="22sp"
        android:hint="@string/password"
        android:textColor="@color/bookshelf_title"
        android:textColorHint="@color/login_border_text"
        android:background="@drawable/gray_border_bottom"
        android:drawableLeft="@mipmap/ic_psw"/>
    <Button
        android:id="@+id/login"
        android:layout_below="@id/password"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/login"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:background="@color/login_btn"
         />
    <TextView
        android:id="@+id/register_entrance"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@id/login"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:text="@string/register_now"
        android:textSize="17sp"
        android:textColor="@color/login_border_text"/>

    <TextView
        android:text="第三方快捷登录"
        android:textSize="17sp"
        android:textColor="@color/login_border_text"
        android:id="@+id/register_three"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_entrance"
        android:layout_width="wrap_content"
        android:layout_marginTop="156dp"
        android:layout_height="32dp" />
    <TextView
        android:id="@+id/register_useless"
        android:layout_width="0dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/db_login"
        android:layout_below="@id/register_three"
        android:layout_marginTop="23dp"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:textColor="@color/login_border_text"
        android:layout_toLeftOf="@+id/register_useless"
        android:layout_marginRight="17dp"
        android:text="@string/db_login"
        android:textSize="17sp"
        android:background="@drawable/btn_gray_border" />
    <Button
        android:id="@+id/wb_login"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_below="@id/register_three"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@id/register_useless"
        android:layout_marginLeft="17dp"
        android:text="@string/wb_login"
        android:textSize="17sp"
        android:textColor="@color/login_border_text"
        android:background="@drawable/btn_gray_border" />
</RelativeLayout>