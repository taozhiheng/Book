<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/header"
    android:background="@color/drawer_header"
    android:layout_width="273dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <ui.CircleImageView
            android:id="@+id/drawer_user_icon"
            android:src="@mipmap/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:border_width="6dp"
            app:border_color="@color/drawer_user_circle"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/drawer_user_name"
            android:layout_toRightOf="@id/drawer_user_icon"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:text="请登录"
            android:gravity="center_horizontal|top"
            android:singleLine="true"/>
        <TextView
            android:textSize="11sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drawer_user_email"
            android:layout_below="@id/drawer_user_name"
            android:layout_toRightOf="@id/drawer_user_icon"
            android:singleLine="true"
            android:textColor="@color/drawer_user_email"
            android:gravity="center_horizontal|bottom"
             />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/drawer_line"
        />
</LinearLayout>