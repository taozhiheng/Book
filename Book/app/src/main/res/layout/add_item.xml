<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <ImageView
        android:id="@+id/add_item_icon"
        android:src="@mipmap/logo"
        android:layout_width="58dp"
        android:layout_height="83dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="29dp" />
    <TextView
        android:id="@+id/add_item_name"
        android:layout_toRightOf="@id/add_item_icon"
        android:layout_toLeftOf="@+id/add_item_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="27dp"
        android:textColor="@color/search_book_name"
        android:lineSpacingExtra="2dp"
        android:layout_marginRight="5dp" />
    <TextView
        android:id="@+id/add_item_author"
        android:layout_toRightOf="@id/add_item_icon"
        android:layout_toLeftOf="@+id/add_item_flag"
        android:layout_below="@id/add_item_name"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:singleLine="true"
        android:textColor="@color/search_other_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/add_item_press"
        android:layout_toRightOf="@id/add_item_icon"
        android:layout_toLeftOf="@+id/add_item_flag"
        android:layout_marginLeft="27dp"
        android:textSize="13sp"
        android:singleLine="true"
        android:textColor="@color/search_other_text"
        android:layout_below="@id/add_item_author"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/add_item_num"
        android:layout_toRightOf="@id/add_item_icon"
        android:layout_toLeftOf="@+id/add_item_flag"
        android:layout_marginLeft="27dp"
        android:layout_below="@id/add_item_press"
        android:layout_marginTop="2dp"
        android:textSize="13sp"
        android:singleLine="true"
        android:textColor="@color/search_other_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/add_item_flag"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp"
        android:background="@drawable/add_background"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter" />
</RelativeLayout>