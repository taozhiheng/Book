<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/book_item_background"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <FrameLayout
        android:id="@+id/item_icons"
        android:layout_width="58dp"
        android:layout_height="83dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp">
        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />
        <TextView
            android:id="@+id/item_icon_text"
            android:textSize="30sp"
            android:gravity="center"
            android:maxLength="2"
            android:textColor="@color/create_other_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <TextView
        android:id="@+id/book_item_time"
        android:layout_marginLeft="120dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/book_item_enter"
        android:singleLine="true"
        android:textSize="13sp"
        android:textColor="@color/bookshelf_title_check"
        android:layout_marginTop="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/book_item_name"
        android:layout_marginLeft="120dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/book_item_enter"
        android:singleLine="true"
        android:textSize="19sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/bookshelf_title"
        android:layout_below="@id/book_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/book_item_author"
        android:layout_marginLeft="120dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/book_item_enter"
        android:singleLine="true"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/bookshelf_title_num"
        android:layout_below="@id/book_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/book_item_num"
        android:layout_below="@id/book_item_author"
        android:layout_marginLeft="120dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/book_item_enter"
        android:singleLine="true"
        android:textSize="13sp"
        android:layout_marginTop="3dp"
        android:textColor="@color/bookshelf_title_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/book_item_enter"
        android:src="@mipmap/ic_right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"/>
</RelativeLayout>