<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_holo_alpha_greener"
    android:padding="@dimen/dev_padding1" >

    <TextView
        android:id="@+id/textView_listItem_feedBack_reply_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dev_margin1"
        android:gravity="center"
        android:textColor="@drawable/sl_txt_gray_lighter"
        android:textSize="@dimen/dev_text_size1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView_listItem_feedBack_reply_dev_portrait"
        android:layout_width="@dimen/dev_width1"
        android:layout_height="@dimen/dev_height1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_listItem_feedBack_reply_date"
        android:contentDescription="@string/developer"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_feedback_portrait_dev" />

    <LinearLayout
        android:id="@+id/linearLayout_listItem_feedBack_reply_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_listItem_feedBack_reply_dev_portrait"
        android:layout_marginLeft="@dimen/dev_margin1"
        android:layout_marginRight="@dimen/dev_margin2"
        android:layout_toRightOf="@+id/imageView_listItem_feedBack_reply_dev_portrait"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_listItem_feedBack_reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_feedback_reply_dev"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/dev_padding4"
            android:paddingLeft="@dimen/dev_padding2"
            android:paddingRight="@dimen/dev_padding3"
            android:paddingTop="@dimen/dev_padding4"
            android:textColor="@color/black"
            android:textSize="@dimen/dev_text_size2" />

        <ImageView
            android:id="@+id/imageView_listItem_feedBack_reply_failed"
            android:layout_width="@dimen/dev_width2"
            android:layout_height="@dimen/dev_height2"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dev_margin1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/info"
            android:src="@drawable/ic_feedback_msg_failed"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar_listItem_feedBack_reply"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dev_margin1"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>